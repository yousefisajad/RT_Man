@page
@model ServicesHost.Areas.Administrator.Pages.Repair.EquipmentCategory.IndexModel
@{
    ViewData["Title"] = "Equipment Category Management";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد گروه محصول جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Search</h3>
            </div>
            <div class="panel-body" >
                <form class="form-inline text-right"  role="form" method="get">
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.Name"></label>
                            <input class="form-control" asp-for="SearchModel.Name" placeholder="Category Name">
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">Search</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">See All</a>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Equipment Categories List</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Insert Date</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>



                                @foreach (var item in Model.equipmentCategories)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="@item.Picture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.InsertDate</td>
                                        <td class="text-center " style=" vertical-align:middle;">
                                            <a class="btn btn-warning  m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}